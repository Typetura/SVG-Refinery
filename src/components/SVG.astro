---
const filters = await Astro.glob('../filters/*.astro');
---

<svg id="refinery" width="0" height="0">

  <style is:global>
    :where(#refinery) {
      --light: yellow;
      --dark: purple;
      --screen-density: 7.5px;
    }
  </style>

  <defs>
    {filters.map((filter) => (
      <filter.default size={24} />
    ))}
  </defs>
</svg>
